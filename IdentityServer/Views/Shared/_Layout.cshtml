<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdentityServer</title>
    
    <partial name="_BootstrapStylesPartial"/>
    <partial name="_AnimateCssStylesPartial"/>
    <partial name="_SiteStylesPartial"/>

    @RenderSection("Styles", required: false)
</head>
<body>

    <div id="background" class="backgroundPic"></div>
    <div id="navBlur" class="animated slideInDown faster backgroundBeforePic" ></div>
    <div id="containerBlur" class="animated bounceInDown backgroundBeforePic" ></div>

    <nav class="navbar navbar-default navbar-fixed-top animated slideInDown faster">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">IdentityServer</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            IdentityManager
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="Identity" asp-page="/Manage/Users/Index">UserManager</a></li>
                            <li><a asp-area="Identity" asp-page="/Manage/Roles/Index">RoleManager</a></li>
                            @*<li class="divider"></li> 分割线*@
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Demo
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-page="/RazorPageDemo">RazorPageDemo</a></li>
                            <li><a asp-area="" asp-page="/SimpleRazorPage2" asp-page-handler="Demo">SimpleRazorPage2-Demo</a></li>
                            <li class="divider"></li>
                            <li><a asp-area="" asp-controller="DomainDemo" asp-action="Index">DomainDemo</a></li>
                            <li><a asp-area="" asp-page="/TreeDomainDemo/Index">TreeDomainDemo</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            SignalR
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-page="/SignalR/Chat/Index">Chat</a></li>
                        </ul>
                    </li>
                    <li><a asp-area="" asp-controller="Home" asp-action="GetControllerAndAction">GetControllerAndAction</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content animated bounceInDown backgroundBeforePic">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - IdentityServer</p>
        </footer>
    </div>

    <partial name="_JQueryScriptsPartial"/>
    <partial name="_BootstrapScriptsPartial"/>
    <partial name="_BootstrapDropdownHoverScriptsPartial"/>
    <partial name="_SiteScriptsPartial"/>

    <script asp-add-nonce="true">
        $(document).ready(function () {
            bodyPaddingTop();
            navBlur();
            containerBlur();

            $(window).resize(function () {
                bodyPaddingTop();
                navBlur();
                containerBlur();
            });

            $('body > div.container.body-content').eq(0).resize(function () {
                containerBlur();
            });

            $('body > nav > div > div.navbar-collapse.collapse').eq(0).resize(function() {
                navBlur();
            });

            $('.navbar [data-toggle="dropdown"]').bootstrapDropdownHover();
        });

        function bodyPaddingTop() {
            $('body > div.container.body-content').eq(0).css('padding-top', $('nav').eq(0).outerHeight() + 15);
        }

        function navBlur() {
            var exp = $('body > nav > div > div.navbar-collapse.collapse').eq(0);
            var h = exp.css('aria-expanded') === 'true' ? exp.outerHeight() : 0;
            $('#navBlur').eq(0).width($('nav').eq(0).outerWidth()).height($('nav').eq(0).outerHeight() + h);
        }

        function containerBlur() {
            $('#containerBlur').eq(0)
                .css('top', $('nav').eq(0).outerHeight() + 'px')
                .css("margin-left",
                    parseFloat($('body > div.container.body-content').eq(0).css('margin-left').substr(0,
                        $('body > div.container.body-content').eq(0).css('margin-left').length - 2)))
                .css("margin-right",
                    parseFloat($('body > div.container.body-content').eq(0).css('margin-right').substr(0,
                        $('body > div.container.body-content').eq(0).css('margin-right').length - 2)))
                .width($('body > div.container.body-content').outerWidth())
                .height($('body > div.container.body-content').eq(0).height() + 15);
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
